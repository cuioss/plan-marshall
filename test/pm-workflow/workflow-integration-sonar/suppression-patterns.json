{
  "suppression_patterns": {
    "java": {
      "single_line": "// NOSONAR {rule-key} - {reason}",
      "block_start": "// NOSONAR_START {rule-key}",
      "block_end": "// NOSONAR_END",
      "annotation": "@SuppressWarnings(\"java:{rule-id}\")"
    },
    "javascript": {
      "single_line": "// NOSONAR",
      "eslint_disable": "// eslint-disable-next-line {rule}"
    }
  },
  "valid_suppression_reasons": [
    "False positive - framework pattern requires this approach",
    "Intentional - documented in issue #{number}",
    "Legacy code - will be refactored in {issue}",
    "Test code - assertion patterns trigger rule",
    "Generated code - auto-generated by {tool}"
  ],
  "invalid_suppression_reasons": [
    "Don't know how to fix",
    "Too hard to fix",
    "Works fine",
    "No reason",
    ""
  ]
}
