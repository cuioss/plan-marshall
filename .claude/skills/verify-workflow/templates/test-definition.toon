# Test Definition Template
# Copy this file to: workflow-verification/test-cases/{test-id}/test-definition.toon

id: {test-id}
name: {Human-readable test name}
workflow_phase: 3-outline

trigger:
  command: /plan-manage
  args: create a new plan: {description of the task}

# setup_commands[N]:  # Optional: commands to run before trigger
#   {command}

cleanup:
  archive_plan: true
  delete_on_success: false
